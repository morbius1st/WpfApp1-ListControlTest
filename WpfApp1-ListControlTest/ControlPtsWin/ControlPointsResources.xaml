<ResourceDictionary x:Name="WinControlPointsResources"
		x:Class="WpfApp1_ListControlTest.ControlPtsWin.ControlPointsResources"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:local="clr-namespace:WpfApp1_ListControlTest.ControlPtsWin"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:validation="clr-namespace:WpfApp1_ListControlTest.ControlPtsWin"
		mc:Ignorable="d"
		>

	<validation:ControlPointXYZConverter x:Key="Converter.Xyz" />
	<validation:ControlPointSlopeConverter x:Key="Converter.Slope" />
	<!-- <validation:PointTemplateSelector x:Key="Point.TemplateSelector" /> -->

	<sys:String x:Key="Parent">WinControlPoints</sys:String>


	<!--  Values  -->

	<!--#region > Lengths-->

	<!--  row numbers  -->
	<sys:Int32 x:Key="Field.Pt.Value.Row.Num">
		0
	</sys:Int32>
	<sys:Int32 x:Key="Field.Pt.Data.Row.Num">
		1
	</sys:Int32>
	<sys:Int32 x:Key="Field.Ed.Row.Num">
		2
	</sys:Int32>

	<sys:Int32 x:Key="Field.Ed.Btn.Row.Num">
		0
	</sys:Int32>
	<sys:Int32 x:Key="Field.Ed.Msg.Num">
		1
	</sys:Int32>

	<!--  row height  -->
	<GridLength x:Key="Header.EndPoint.Row.Height">
		18
	</GridLength>
	<GridLength x:Key="Field.Pt.Value.Row.Height">
		20
	</GridLength>
	<GridLength x:Key="Field.Pt.Data.Row.Height">
		20
	</GridLength>

	<GridLength x:Key="Field.Ed.Row.Height.Top">
		32
	</GridLength>
	<GridLength x:Key="Field.Ed.Row.Height.Bottom">
		*
	</GridLength>

	<sys:Double x:Key="Field.Ed.Button.Width">
		70
	</sys:Double>

	<!--  column widths  -->
	<GridLength x:Key="Col.00.Width">
		1*
	</GridLength>
	<GridLength x:Key="Col.01.Width">
		1*
	</GridLength>
	<GridLength x:Key="Col.02.Width">
		1*
	</GridLength>
	<GridLength x:Key="Col.03.Width">
		1*
	</GridLength>
	<GridLength x:Key="Col.04.Width">
		1*
	</GridLength>
	<GridLength x:Key="Col.05.Width">
		1*
	</GridLength>
	<GridLength x:Key="Col.06.Width">
		1*
	</GridLength>
	<GridLength x:Key="Col.07.Width">
		1*
	</GridLength>
	<GridLength x:Key="Col.08.Width">
		17
	</GridLength>
	<!--#endregion-->

	<!--#region >> Color & Brushes-->

	<SolidColorBrush x:Key="ListBox.Background.C"
			Color="{StaticResource red.050}"
			/>
	<SolidColorBrush x:Key="Border.Std.C"
			Color="{StaticResource gray.350}"
			/>
	<SolidColorBrush x:Key="Border.Light.C"
			Color="{StaticResource gray.450}"
			/>


	<SolidColorBrush x:Key="Header.Background.C"
			Color="{StaticResource gray.250}"
			/>
	<SolidColorBrush x:Key="Header.Filler.Background.C"
			Color="{StaticResource gray.200}"
			/>
	<SolidColorBrush x:Key="Header.EndPoint.Filler.Background.C"
			Color="{StaticResource gray.400}"
			/>
	<SolidColorBrush x:Key="Field.Pt.Data.Background.C"
			Color="{StaticResource gray.400}"
			/>
	<SolidColorBrush x:Key="Field.Ed.Background.C"
			Color="{StaticResource gray.820}"
			/>

	<SolidColorBrush x:Key="Gray.Light.Very.C"
			Color="{StaticResource gray.970}"
			/>
	<SolidColorBrush x:Key="Gray.Dark.Xtra.Very.C"
			Color="{StaticResource gray.150}"
			/>
	<SolidColorBrush x:Key="Blue.Dark.Xtra.C"
			Color="{StaticResource blue.gray.010}"
			/>


	<!--  Brushes  -->

	<SolidColorBrush x:Key="Border.Std"
			Color="{Binding Color, Source={StaticResource Border.Std.C}}"
			/>
	<SolidColorBrush x:Key="DockPanel.Background"
			Color="{Binding Color, Source={StaticResource Blue.Dark.Xtra.C}}"
			/>
	<LinearGradientBrush x:Key="Bdr.Shadow" StartPoint="0.5,0" EndPoint="0.5,1">
		<GradientStop Offset="0.89" Color="{Binding Color, Source={StaticResource Gray.Dark.Xtra.Very.C}}" />
		<GradientStop Offset=".990" Color="{Binding Color, Source={StaticResource Gray.Light.Very.C}}" />
	</LinearGradientBrush>

	<!--#endregion-->

	<!--  Styles  -->

	<!--#region >> Styles: General-->

	<Style x:Key="Header.Base.Bdr.Root"
			TargetType="Border"
			>
		<Setter Property="BorderBrush" Value="{StaticResource Border.Light.C}" />
		<Setter Property="BorderThickness" Value="0,0,1,0" />
		<Setter Property="Margin" Value="0" />
	</Style>

	<Style x:Key="Header.Base.Bdr.Alt.1"
			TargetType="Border"
			BasedOn="{StaticResource Header.Base.Bdr.Root}"
			>
		<Setter Property="BorderThickness" Value="0,0,1,1" />
	</Style>

	<!--#endregion-->

	<!--#region >> Styles: Header: Column Labels: Point Value-->

	<Style x:Key="Header.Labels.Col.Value.Lbl"
			TargetType="{x:Type Label}"
			>
		<Setter Property="Foreground" Value="White" />
		<Setter Property="HorizontalContentAlignment" Value="Center" />
		<Setter Property="Padding" Value="8,0,0,2" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>

	<Style x:Key="Header.Labels.Col.Value.Bdr"
			TargetType="Border"
			BasedOn="{StaticResource Header.Base.Bdr.Alt.1}"
			/>

	<!--#endregion-->

	<!--#region >> Styles: Header: Column Labels: Point Data-->

	<Style x:Key="Header.Labels.Col.Data.Lbl"
			TargetType="{x:Type Label}"
			>
		<Setter Property="Foreground" Value="White" />
		<Setter Property="HorizontalContentAlignment" Value="Center" />
		<Setter Property="Padding" Value="8,0,0,2" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>

	<Style x:Key="Header.Labels.Col.Data.Bdr"
			TargetType="Border"
			BasedOn="{StaticResource Header.Base.Bdr.Root}"
			/>

	<!--#endregion-->

	<!--#region >> Styles: Header: End point-->

	<!--  must be before  -->
	<Style x:Key="Header.EndPoint.Data.Filler.Lbl"
			TargetType="{x:Type Label}"
			>
		<Setter Property="Foreground" Value="White" />
		<Setter Property="HorizontalContentAlignment" Value="Center" />
		<Setter Property="Padding" Value="8,0,0,2" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>

	<!--  must be before  -->
	<Style x:Key="Header.EndPoint.Data.Filler.Bdr"
			TargetType="Border"
			BasedOn="{StaticResource Header.Base.Bdr.Alt.1}"
			>
		<Setter Property="Background" Value="{StaticResource Header.EndPoint.Filler.Background.C}" />
		<Setter Property="BorderBrush" Value="{StaticResource Border.Std}" />
	</Style>

	<Style x:Key="Header.EndPoint.Data.Lbl"
			TargetType="{x:Type Label}"
			BasedOn="{StaticResource Header.EndPoint.Data.Filler.Lbl}"
			>
		<Setter Property="Foreground" Value="Black" />
	</Style>

	<Style x:Key="Header.EndPoint.Data.Bdr"
			TargetType="Border"
			BasedOn="{StaticResource Header.Base.Bdr.Root}"
			>
		<Setter Property="Background" Value="{StaticResource Gray.UnSelected.Background}" />
		<Setter Property="BorderBrush" Value="{StaticResource Border.Std}" />
	</Style>

	<Style x:Key="Header.EndPoint.Value.Bdr"
			TargetType="Border"
			BasedOn="{StaticResource Header.Base.Bdr.Alt.1}"
			>
		<Setter Property="Background" Value="{StaticResource Gray.UnSelected.Background}" />
		<Setter Property="BorderBrush" Value="{StaticResource Border.Std}" />
	</Style>

	<Style x:Key="Header.EndPoint.Value.Lbl"
			TargetType="{x:Type Label}"
			BasedOn="{StaticResource Header.EndPoint.Data.Filler.Lbl}"
			>
		<Setter Property="Foreground" Value="Black" />
	</Style>

	<!--#endregion-->

	<!--  order matters  -->
	<!--#region >> Control Template: Field.Pt.Value.Tbx.Template-->

	<ControlTemplate x:Key="Field.Pt.Value.Tbx.Template"
			TargetType="{x:Type TextBoxBase}"
			>
		<Border x:Name="Bd"
				SnapsToDevicePixels="True"
				Background="{TemplateBinding Background}"
				BorderThickness="{TemplateBinding BorderThickness}"
				BorderBrush="{TemplateBinding BorderBrush}"
				>
			<ScrollViewer x:Name="PART_ContentHost"
					Focusable="False"
					HorizontalScrollBarVisibility="Hidden"
					VerticalScrollBarVisibility="Hidden"
					/>
		</Border>
		<ControlTemplate.Triggers>
			<Trigger Property="IsEnabled" Value="False">
				<Setter TargetName="Bd" Property="Opacity" Value="0.80" />
			</Trigger>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter TargetName="Bd" Property="Background" Value="{StaticResource Normal.MouseOver.Background}" />
			</Trigger>
			<Trigger Property="IsKeyboardFocused" Value="True">
				<Setter TargetName="Bd" Property="Background" Value="{StaticResource Normal.SelectedActive.Background}" />
			</Trigger>
		</ControlTemplate.Triggers>
	</ControlTemplate>

	<!--#endregion-->

	<!--#region >> Styles: Field: Field.Pt.Value-->

	<Style x:Key="Field.Pt.Value.Tbx"
			TargetType="{x:Type TextBox}"
			>
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="BorderBrush" Value="{StaticResource Normal.Disabled.Border}" />
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="HorizontalContentAlignment" Value="Center" />
		<Setter Property="IsEnabled" Value="False" />
		<Setter Property="Opacity" Value="1" />
		<Setter Property="Template" Value="{StaticResource Field.Pt.Value.Tbx.Template}" />
		<Setter Property="VerticalAlignment" Value="Stretch" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
		<Style.Triggers>
			<DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBoxItem}, AncestorLevel=1}}"
					Value="True"
					>
				<Setter Property="Background" Value="{StaticResource Normal.Background}" />
				<Setter Property="BorderBrush" Value="{StaticResource Border.Std}" />
				<Setter Property="Foreground" Value="{StaticResource Normal.Foreground}" />
				<Setter Property="IsEnabled" Value="True" />
			</DataTrigger>
			<Trigger Property="IsEnabled" Value="false">
				<Setter Property="Opacity" Value="1" />
			</Trigger>
		</Style.Triggers>
	</Style>

	<!--#endregion-->

	<!--#region >> Styles: Field: Field.Pt.Data-->

	<Style x:Key="Field.Pt.Data.Tbx"
			TargetType="{x:Type TextBlock}"
			>
		<Setter Property="Foreground" Value="{StaticResource Gray.UnSelected.Foreground}" />
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="Padding" Value="4,2,2,5" />
		<Setter Property="TextAlignment" Value="Center" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>

	<Style x:Key="Field.Pt.Data.Filler"
			TargetType="Border"
			>
		<Setter Property="Background" Value="{StaticResource Field.Pt.Data.Background.C}" />
		<Setter Property="BorderBrush" Value="{StaticResource Border.Std}" />
		<Setter Property="BorderThickness" Value="0,0,1,0" />
		<Setter Property="Margin" Value="0,0,0,0.25" />
	</Style>

	<!--#endregion-->

	<!--#region >> Styles: Field: Editing Row-->

	<Style x:Key="Field.Ed.Grid"
			TargetType="UniformGrid"
			>
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Stretch" />
		<Setter Property="Visibility" Value="Visible" />

		<Style.Triggers>
			<DataTrigger Binding="{Binding IsBeingEdited, Mode=OneWay}"
					Value="true"
					>
				<Setter Property="Visibility" Value="Visible" />
			</DataTrigger>
		</Style.Triggers>
	</Style>

	<Style x:Key="Field.Ed.Button.Normal"
			TargetType="Button"
			BasedOn="{StaticResource Button.Normal.Style}"
			>
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="HorizontalAlignment" Value="Center" />
		<Setter Property="Margin" Value="-1,6,6,6" />
		<Setter Property="Width" Value="{StaticResource Field.Ed.Button.Width}" />

	</Style>


	<!--#endregion-->

	<!--#region >> Styles: Footer: Start point-->

	<Style x:Key="Ftr.StartPoint.Bdr"
			TargetType="Border"
			BasedOn="{StaticResource Header.EndPoint.Data.Bdr}"
			/>

	<Style x:Key="Ftr.StartPoint.Lbl"
			TargetType="{x:Type Label}"
			BasedOn="{StaticResource Header.EndPoint.Data.Lbl}"
			/>


	<Style x:Key="Ftr.StartPoint.Filler.Bdr"
			TargetType="Border"
			BasedOn="{StaticResource Header.EndPoint.Data.Filler.Bdr}"
			/>

	<Style x:Key="Ftr.StartPoint.Filler.Lbl"
			TargetType="{x:Type Label}"
			BasedOn="{StaticResource Header.EndPoint.Data.Filler.Lbl}"
			/>

	<!--#endregion-->

	<!--  Group Boxes  -->

	<!--#region >> GroupBox: Field.Pt.Value.Gbx-->
	<Style x:Key="Field.Pt.Value.Gbx"
			TargetType="{x:Type GroupBox}"
			>
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="BorderBrush" Value="Transparent" />
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type GroupBox}">
					<Grid SnapsToDevicePixels="True">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="0" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="1" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="0" />
							<RowDefinition Height="*" />
							<RowDefinition Height="1" />

						</Grid.RowDefinitions>
						<Border Grid.Row="0"
								Grid.RowSpan="3"
								Grid.Column="0"
								BorderThickness="0,0,0,0"
								BorderBrush="Transparent"
								/>
						<Border Grid.Row="0"
								Grid.Column="0"
								Grid.ColumnSpan="3"
								BorderThickness="0,0,0,0"
								BorderBrush="Transparent"
								/>
						<Border Grid.Row="0"
								Grid.RowSpan="3"
								Grid.Column="2"
								BorderThickness="0,0,1,0"
								BorderBrush="{StaticResource Border.Std}"
								/>
						<Border Grid.Row="2"
								Grid.Column="0"
								Grid.ColumnSpan="3"
								BorderThickness="0,0,0,1"
								BorderBrush="{StaticResource Border.Std}"
								/>
						<ContentPresenter Grid.Row="1"
								Grid.Column="1"
								/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<!--#endregion-->

	<!--#region >> GroupBox: Field.Pt.Data.Gbx-->
	<Style x:Key="Field.Pt.Data.Gbx"
			TargetType="{x:Type GroupBox}"
			>
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="BorderBrush" Value="Transparent" />
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type GroupBox}">
					<Grid SnapsToDevicePixels="True">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="0" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="1" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="0" />
							<RowDefinition Height="*" />
							<RowDefinition Height="0" />
						</Grid.RowDefinitions>

						<!--  left  -->
						<Border Grid.Row="0"
								Grid.RowSpan="3"
								Grid.Column="0"
								BorderThickness="1,0,0,0"
								BorderBrush="Transparent"
								/>
						<!--  top  -->
						<Border Grid.Row="0"
								Grid.Column="0"
								Grid.ColumnSpan="3"
								BorderThickness="0,1,0,0"
								BorderBrush="Transparent"
								/>
						<!--  right  -->
						<Border Grid.Row="0"
								Grid.RowSpan="3"
								Grid.Column="2"
								BorderThickness="0,0,1,0"
								BorderBrush="{StaticResource Border.Std}"
								/>
						<!--  bottom  -->
						<Border Grid.Row="2"
								Grid.Column="0"
								Grid.ColumnSpan="3"
								BorderThickness="0,0,0,1"
								BorderBrush="Transparent"
								/>

						<ContentPresenter Grid.Row="1"
								Grid.Column="1"
								/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!--#endregion-->

	<!--  Control Template  -->

	<!--#region >> Control Template: Header.Col.Labels.Rows-->
	<ControlTemplate x:Key="Header.Col.Labels.Rows">
		<Grid Name="GridColLabels"
				Margin="0,0,0,-1"
				DockPanel.Dock="Top"
				Background="{StaticResource Header.Background.C}"
				>
			<Grid.ColumnDefinitions>
				<!--  0  -->
				<ColumnDefinition Name="GridColLabels_Col01"
						Width="{StaticResource Col.00.Width}"
						/>
				<!--  1  -->
				<ColumnDefinition Width="{StaticResource Col.01.Width}" />
				<!--  2  -->
				<ColumnDefinition Width="{StaticResource Col.02.Width}" />
				<!--  3  -->
				<ColumnDefinition Width="{StaticResource Col.03.Width}" />
				<!--  4  -->
				<ColumnDefinition Width="{StaticResource Col.04.Width}" />
				<!--  5  -->
				<ColumnDefinition Width="{StaticResource Col.05.Width}" />
				<!--  6  -->
				<ColumnDefinition Width="{StaticResource Col.06.Width}" />
				<!--  7  -->
				<ColumnDefinition Width="{StaticResource Col.07.Width}" />

			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="{StaticResource Header.EndPoint.Row.Height}" />
				<RowDefinition Height="{StaticResource Header.EndPoint.Row.Height}" />

			</Grid.RowDefinitions>

			<!--  Header rows  -->

			<!--#region >> Header: label rows-->

			<!--#region >> Header: Point value-->

			<Border Grid.Row="0"
					Grid.Column="0"
					Grid.ColumnSpan="2"
					Style="{StaticResource Header.Labels.Col.Value.Bdr}"
					>
				<Label Content="X"
						Style="{StaticResource Header.Labels.Col.Value.Lbl}"
						/>
			</Border>
			<Border Grid.Row="0"
					Grid.Column="2"
					Grid.ColumnSpan="2"
					Style="{StaticResource Header.Labels.Col.Value.Bdr}"
					>
				<Label Content="Y"
						Style="{StaticResource Header.Labels.Col.Value.Lbl}"
						/>
			</Border>
			<Border Grid.Row="0"
					Grid.Column="4"
					Grid.ColumnSpan="2"
					Style="{StaticResource Header.Labels.Col.Value.Bdr}"
					>
				<Label Content="Z"
						Style="{StaticResource Header.Labels.Col.Value.Lbl}"
						/>
			</Border>

			<Border Grid.Row="0"
					Grid.Column="6"
					Grid.ColumnSpan="2"
					Style="{StaticResource Header.Labels.Col.Value.Bdr}"
					>
				<Label Content="Slope"
						Style="{StaticResource Header.Labels.Col.Value.Lbl}"
						/>
			</Border>

			<!--#endregion-->

			<!--#region >> Header: Point data-->

			<Border Grid.Row="1"
					Grid.Column="0"
					Background="{StaticResource Header.Filler.Background.C}"
					Style="{StaticResource Header.Labels.Col.Data.Bdr}"
					/>

			<Border Grid.Row="1"
					Grid.Column="1"
					Grid.ColumnSpan="2"
					Style="{StaticResource Header.Labels.Col.Data.Bdr}"
					>
				<Label Content="Delta XY"
						Style="{StaticResource Header.Labels.Col.Data.Lbl}"
						/>
			</Border>

			<Border Grid.Row="1"
					Grid.Column="3"
					Grid.ColumnSpan="2"
					Style="{StaticResource Header.Labels.Col.Data.Bdr}"
					>
				<Label Content="Delta XYZ"
						Style="{StaticResource Header.Labels.Col.Data.Lbl}"
						/>
			</Border>

			<Border Grid.Row="1"
					Grid.Column="5"
					Grid.ColumnSpan="2"
					BorderThickness="0"
					Style="{StaticResource Header.Labels.Col.Data.Bdr}"
					>
				<Label Content="Delta Z"
						Style="{StaticResource Header.Labels.Col.Data.Lbl}"
						/>
			</Border>

			<Border Grid.Row="1"
					Grid.Column="7"
					Background="{StaticResource Header.Filler.Background.C}"
					BorderThickness="0,0,0,1"
					Style="{StaticResource Header.Labels.Col.Data.Bdr}"
					/>

			<!--#endregion-->

			<!--#endregion-->

		</Grid>

	</ControlTemplate>


	<!--#endregion-->

	<!--#region >> Control Template: Header.EndPoint-->

	<ControlTemplate x:Key="Header.EndPoint.Row">
		<Grid d:DesignWidth="500">
			<Grid.ColumnDefinitions>
				<!--  0  -->
				<ColumnDefinition Width="{StaticResource Col.00.Width}" />
				<!--  1  -->
				<ColumnDefinition Width="{StaticResource Col.01.Width}" />
				<!--  2  -->
				<ColumnDefinition Width="{StaticResource Col.02.Width}" />
				<!--  3  -->
				<ColumnDefinition Width="{StaticResource Col.03.Width}" />
				<!--  4  -->
				<ColumnDefinition Width="{StaticResource Col.04.Width}" />
				<!--  5  -->
				<ColumnDefinition Width="{StaticResource Col.05.Width}" />
				<!--  6  -->
				<ColumnDefinition Width="{StaticResource Col.06.Width}" />
				<!--  7  -->
				<ColumnDefinition Width="{StaticResource Col.07.Width}" />

			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="{StaticResource Header.EndPoint.Row.Height}" />
				<RowDefinition Height="{StaticResource Header.EndPoint.Row.Height}" />
			</Grid.RowDefinitions>

			<!--  Header: end point value row  -->

			<!--#region >> Header: End point value row-->

			<Border Grid.Row="0"
					Grid.Column="0"
					Grid.ColumnSpan="2"
					Style="{StaticResource Header.EndPoint.Value.Bdr}"
					>
				<Label Content="{Binding EndX}"
						Style="{StaticResource Header.EndPoint.Value.Lbl}"
						/>
			</Border>

			<Border Grid.Row="0"
					Grid.Column="2"
					Grid.ColumnSpan="2"
					Style="{StaticResource Header.EndPoint.Value.Bdr}"
					>
				<Label Content="{Binding EndY}"
						Style="{StaticResource Header.EndPoint.Value.Lbl}"
						/>
			</Border>

			<Border Grid.Row="0"
					Grid.Column="4"
					Grid.ColumnSpan="2"
					Style="{StaticResource Header.EndPoint.Value.Bdr}"
					>
				<Label Content="{Binding EndZ}"
						Style="{StaticResource Header.EndPoint.Value.Lbl}"
						/>
			</Border>

			<Border Grid.Row="0"
					Grid.Column="6"
					Grid.ColumnSpan="2"
					Style="{StaticResource Header.EndPoint.Value.Bdr}"
					>
				<Label Content="{Binding EndSlope}"
						Style="{StaticResource Header.EndPoint.Value.Lbl}"
						/>
			</Border>
			<!--#endregion-->

			<!--#region >> Header: End point data row-->

			<Border Grid.Row="1"
					Grid.Column="0"
					Style="{StaticResource Header.EndPoint.Data.Filler.Bdr}"
					>
				<Label Content=""
						Style="{StaticResource Header.EndPoint.Data.Filler.Lbl}"
						/>
			</Border>

			<Border Grid.Row="1"
					Grid.Column="1"
					Grid.ColumnSpan="2"
					Style="{StaticResource Header.EndPoint.Data.Bdr}"
					>
				<Label Content="{Binding EndDeltaXY}"
						Style="{StaticResource Header.EndPoint.Data.Lbl}"
						/>
			</Border>

			<Border Grid.Row="1"
					Grid.Column="3"
					Grid.ColumnSpan="2"
