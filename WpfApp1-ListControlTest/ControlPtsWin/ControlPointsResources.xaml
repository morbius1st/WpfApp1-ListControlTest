	<!--#region >> Control Template: Field.Ed.Rows-->

	<ControlTemplate x:Key="Field.Ed.Rows">

		<Border BorderThickness="0,1,0,0"
				BorderBrush="{StaticResource Border.Std}"
				>
			<Border BorderThickness="0,0,0,1"
					BorderBrush="Black"
					>
				<StackPanel Margin="0"
						Orientation="Vertical"
						Background="{StaticResource Field.Ed.Background.C}"
						>
					<UniformGrid Columns="8"
							Rows="1"
							Style="{StaticResource Field.Ed.Grid}"
							>

						<!--#region >> Field.Ed.Btns-->

						<Button Name="btnSaveX" Content="Save X"
								Grid.Row="{StaticResource Field.Ed.Btn.Row.Num}"
								Grid.Column="0"
								Command="{Binding ButtonClickCommand, Mode=OneWay, ElementName={StaticResource Parent}}"
								CommandParameter="{Binding ElementName=btnSaveX, Path=Name}"
								IsEnabled="{Binding Path=HasRevisionX, Mode=OneWay}"
								Style="{StaticResource Field.Ed.Button.Normal}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								/>

						<!--  Command="{Binding Source={StaticResource cps }, Path=ClickCommand}"  -->


						<Button Name="btnRestoreX" Content="Restore X"
								Grid.Row="{StaticResource Field.Ed.Btn.Row.Num}"
								Grid.Column="1"
								Margin="6"
								MaxWidth="70"
								Command="{Binding ButtonClickCommand, Mode=OneWay, ElementName={StaticResource Parent}}"
								CommandParameter="{Binding ElementName=btnRestoreX, Path=Name}"
								IsEnabled="{Binding Path=HasRevisionX, Mode=OneWay}"
								Style="{StaticResource Field.Ed.Button.Normal}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								/>

						<Button Content="Save Y"
								Grid.Row="{StaticResource Field.Ed.Btn.Row.Num}"
								Grid.Column="2"
								Margin="6"
								IsEnabled="{Binding Path=HasRevisionY, Mode=OneWay}"
								Style="{StaticResource Field.Ed.Button.Normal}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								/>

						<Button Content="Restore Y"
								Grid.Row="{StaticResource Field.Ed.Btn.Row.Num}"
								Grid.Column="3"
								Margin="6"
								IsEnabled="{Binding Path=HasRevisionY, Mode=OneWay}"
								Style="{StaticResource Field.Ed.Button.Normal}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								/>

						<Button Content="Save Z"
								Grid.Row="{StaticResource Field.Ed.Btn.Row.Num}"
								Grid.Column="4"
								Margin="6"
								IsEnabled="{Binding Path=HasRevisionZ, Mode=OneWay}"
								Style="{StaticResource Field.Ed.Button.Normal}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								/>

						<Button Content="Restore Z"
								Grid.Row="{StaticResource Field.Ed.Btn.Row.Num}"
								Grid.Column="5"
								Margin="6"
								IsEnabled="{Binding Path=HasRevisionZ, Mode=OneWay}"
								Style="{StaticResource Field.Ed.Button.Normal}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								/>

						<Button Content="Save Slope"
								Grid.Row="{StaticResource Field.Ed.Btn.Row.Num}"
								Grid.Column="6"
								Margin="6"
								IsEnabled="{Binding Path=HasRevisionS, Mode=OneWay}"
								Style="{StaticResource Field.Ed.Button.Normal}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								/>

						<Button Content="Rest Slope"
								Grid.Row="{StaticResource Field.Ed.Btn.Row.Num}"
								Grid.Column="7"
								Margin="6"
								IsEnabled="{Binding Path=HasRevisionS, Mode=OneWay}"
								Style="{StaticResource Field.Ed.Button.Normal}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								/>
						<!--#endregion-->
					</UniformGrid>

					<!--#region >> Field.Ed.Info-->
					<DockPanel HorizontalAlignment="Stretch"
							LastChildFill="True"
							ScrollViewer.VerticalScrollBarVisibility="Disabled"
