	<!--  Primary Template  -->

	<!--#region >> Primary Control Template: ListBox.Overall-->

	<ControlTemplate x:Key="ListBox.Overall">
		<!--  perimeter border  -->
		<Border Margin="0,0,0,-3"
				d:DesignWidth="700"
				BorderThickness="0"
				>

			<DockPanel Margin="0"
					LastChildFill="True"
					Background="{StaticResource DockPanel.Background}"
					>

				<!--#region > Main header w/ end point-->
				<Grid Margin="0,0,0,0"
						VerticalAlignment="Top"
						DockPanel.Dock="Top"
						>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="17.5" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="42" />
						<RowDefinition Height="40" />
					</Grid.RowDefinitions>

					<!--#region >> Header: Header.ColLabels-->
					<Border Grid.Row="0"
							Grid.Column="0"
							Margin="0,0,-1,-0.5"
							BorderThickness="0,0,0,7"
							BorderBrush="{StaticResource Bdr.Shadow}"
							>

						<ContentControl DockPanel.Dock="Top"
								Template="{StaticResource Header.Col.Labels.Rows}"
								/>

					</Border>

					<!--#endregion-->

					<!--#region >> Header: Header.EndPoint-->
					<Border Grid.Row="1"
							Grid.Column="0"
							Margin="0,0,-1,-2.5"
							VerticalAlignment="top"
							DockPanel.Dock="top"
							Background="{StaticResource Border.Std}"
							BorderThickness="0,0,0,7"
							BorderBrush="{StaticResource Bdr.Shadow}"
							>

						<ContentControl Template="{StaticResource Header.EndPoint.Row}" />

					</Border>
					<!--  end end point header  -->
					<!--#endregion-->

					<!--#region >> Scroll bar column-->
					<Border Grid.Row="0"
							Grid.RowSpan="2"
							Grid.Column="1"
							Background="{StaticResource Header.Background.C}"
							BorderThickness="1,0,0,1"
							BorderBrush="{StaticResource Border.Std}"
							/>
					<!--#endregion-->

				</Grid>
				<!--  end main header  -->

				<!--#endregion-->

				<!--#region >> ScrollViewer w/ start point-->

				<!--  present the list box values  -->
				<ScrollViewer Name="ScrollViewer"
						Padding="0,0,0,0"
						HorizontalAlignment="Stretch"
						HorizontalContentAlignment="Stretch"
						VerticalScrollBarVisibility="Visible"
						>
					<Grid Margin="0,0,-3,0"
							MaxWidth="{Binding ElementName=ScrollViewer, Path=ViewportWidth}"
							>

						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>
						<ItemsPresenter Margin="-4,0,-5,0" />
						<ContentControl Grid.Row="1"
								Margin="0,2,0,0"
								VerticalAlignment="Top"
								Template="{StaticResource Ftr.StartPoint.Row}"
								/>
					</Grid>

				</ScrollViewer>
				<!--  end  -->
				<!--#endregion-->

			</DockPanel>

		</Border>
		<!--  end perimeter border  -->

	</ControlTemplate>
	<!--#endregion-->

	<!--  Data Template  -->

	<!--#region >> Data Template: Item.Selected.Normal-->

	<DataTemplate x:Key="Item.Selected.Normal.Panel">
		<Border Margin="-1,0,-1,-4"
				d:DesignWidth="500"
				BorderThickness="0,0,0,8"
				BorderBrush="{DynamicResource Bdr.Shadow}"
				>
			<Grid Margin="0,0,0,0">
				<Grid.ColumnDefinitions>
					<!--  0  -->
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="{StaticResource Field.Pt.Value.Row.Height}" />
					<RowDefinition Height="{StaticResource Field.Pt.Data.Row.Height}" />

				</Grid.RowDefinitions>

				<!--#region + Point Value Row-->
				<ContentControl Grid.Row="{DynamicResource Field.Pt.Value.Row.Num}"
						Grid.Column="0"
						Template="{DynamicResource Field.Pt.Value.Row}"
						/>

				<!--#endregion-->

				<!--#region + Point Data row-->
				<ContentControl Grid.Row="{DynamicResource Field.Pt.Data.Row.Num}"
						Grid.Column="0"
						Template="{DynamicResource Field.Pt.Data.Row}"
						/>

				<!--#endregion-->

			</Grid>
		</Border>
	</DataTemplate>

	<!--#endregion-->

	<!--#region >> Data Template: Item.Selected.Edit.Panel-->

	<DataTemplate x:Key="Item.Selected.Edit.Panel">
		<Border Margin="-1,0,-1,-5"
				d:DesignWidth="500"
				BorderThickness="0,0,0,8"
				BorderBrush="{DynamicResource Bdr.Shadow}"
				>
			<Grid Margin="0,0,0,0">
				<Grid.ColumnDefinitions>
					<!--  0  -->
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="{StaticResource Field.Pt.Value.Row.Height}" />
					<RowDefinition Height="{StaticResource Field.Pt.Data.Row.Height}" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<!--  Detail Value Row  -->
				<ContentControl Grid.Row="{DynamicResource Field.Pt.Value.Row.Num}"
						Grid.Column="0"
						Template="{DynamicResource Field.Pt.Value.Row}"
						/>

				<!--  Detail info row  -->
				<ContentControl Grid.Row="{DynamicResource Field.Pt.Data.Row.Num}"
						Grid.Column="0"
						Template="{DynamicResource Field.Pt.Data.Row}"
						/>

				<!--  EditPanel  -->
				<ContentControl Grid.Row="{DynamicResource Field.Ed.Row.Num}"
						Grid.Column="0"
						Template="{DynamicResource Field.Ed.Rows}"
						/>

			</Grid>
		</Border>
	</DataTemplate>

	<!--#endregion-->

	<!--#region >> Data Template: Selector: ListBox.Item.Selector-->

	<DataTemplate x:Key="ListBox.Item.Selector">
		<ContentPresenter x:Name="contentPresenter" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}"
				d:DesignWidth="500"
				/>
		<DataTemplate.Triggers>
			<DataTrigger Binding="{Binding IsBeingEdited, UpdateSourceTrigger=PropertyChanged}"
					Value="true"
					>
				<Setter TargetName="contentPresenter" Property="ContentTemplate" Value="{DynamicResource Item.Selected.Edit.Panel}" />
			</DataTrigger>
			<DataTrigger Binding="{Binding IsBeingEdited, UpdateSourceTrigger=PropertyChanged}"
					Value="false"
					>
				<Setter TargetName="contentPresenter" Property="ContentTemplate" Value="{DynamicResource Item.Selected.Normal.Panel}" />
			</DataTrigger>
		</DataTemplate.Triggers>

	</DataTemplate>

	<!--#endregion-->


</ResourceDictionary>
