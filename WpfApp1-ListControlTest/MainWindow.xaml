<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:WpfApp1_ListControlTest"
	xmlns:sampleData="clr-namespace:WpfApp1_ListControlTest.SampleData"
	x:Class="WpfApp1_ListControlTest.MainWindow"
	
	mc:Ignorable="d"
	Name="mainWindow"
	Title="MainWindow"
	Height="1113.6"
	Width="928"
	Background="#FF2C2C2C" 
	Loaded="MainWindow_Loaded"
	>

	<Window.Resources>


		<SolidColorBrush
			x:Key="GridBorderGrey"
			Color="#FF909090" />

		<SolidColorBrush
			x:Key="BkGrndUnUsedHdr"
			Color="#FF282828" />

		<SolidColorBrush
			x:Key="BkGrndUnUsedDetail"
			Color="#FF888888" />


		<LinearGradientBrush
			x:Name="ShadowDetail"
			x:Key="ShadowDetail"
			EndPoint="0.5,1"
			StartPoint="0.5,0">
			<GradientStop
				Color="Black"
				Offset="0.87" />
			<GradientStop
				Color="#FFFDFDFF"
				Offset="1" />
		</LinearGradientBrush>


		<Style
			x:Key="CellTxBlk"
			TargetType="{x:Type TextBlock}">
			<Setter
				Property="VerticalAlignment"
				Value="Center" />
			<Setter
				Property="Padding"
				Value="4,2,2,5" />
			<Setter
				Property="HorizontalAlignment"
				Value="Center" />
		</Style>

		<Style
			x:Key="CellTxBox"
			TargetType="{x:Type TextBox}">
			<Setter
				Property="BorderThickness"
				Value="0,0,0,0" />
			<Setter
				Property="VerticalAlignment"
				Value="Stretch" />
			<Setter
				Property="VerticalContentAlignment"
				Value="Center" />
			<Setter
				Property="HorizontalContentAlignment"
				Value="Center" />
		</Style>


		<Style
			x:Key="lbHeader"
			TargetType="{x:Type Label}">
			<Setter
				Property="Foreground"
				Value="White" />
			<Setter
				Property="VerticalAlignment"
				Value="Center" />
			<Setter
				Property="Padding"
				Value="8,0,0,2" />
			<Setter
				Property="HorizontalContentAlignment"
				Value="Center" />
		</Style>


		<Style
			x:Key="lblHeaderBdrTop"
			TargetType="Border">
			<Setter
				Property="BorderBrush"
				Value="{StaticResource GridBorderGrey}" />
			<Setter
				Property="BorderThickness"
				Value="0,0,1,1" />
			<Setter
				Property="Margin"
				Value="0" />
		</Style>

		<Style
			x:Key="lblHeaderBdrBottom"
			TargetType="Border">
			<Setter
				Property="BorderBrush"
				Value="{StaticResource GridBorderGrey}" />
			<Setter
				Property="BorderThickness"
				Value="0,0,1,0" />
			<Setter
				Property="Margin"
				Value="0" />
		</Style>



		<!-- <local:SampleCollection -->
		<!-- 	x:Key="scx" -->
		<!-- 	d:IsDataSource="True" /> -->

		<DataTemplate
			x:Key="SampleDataClassTemplate">

			<Grid
				Margin="0,-2.0,0,-3">

				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="200" />
					<ColumnDefinition
						Width="200" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>

				<Border
					Grid.Column="0"
					BorderBrush="Black"
					BorderThickness="0,1,0,1">
					<TextBlock
						Style="{DynamicResource CellTxBlk}"
						Text="{Binding SheetData}"
						Grid.Column="0" />
				</Border>
				<Border
					Grid.Column="1"
					BorderBrush="Black"
					BorderThickness="1,1,0,1">
					<TextBlock
						Style="{DynamicResource CellTxBlk}"
						Text="{Binding SheetName}"
						Grid.Column="1" />
				</Border>
				<Border
					Grid.Column="2"
					BorderBrush="Black"
					BorderThickness="1,1,0,1">
					<TextBlock
						Style="{DynamicResource CellTxBlk}"
						Text="{Binding SheetNumber}" />
				</Border>
			</Grid>
		</DataTemplate>

		<DataTemplate
			x:Key="SampleDataClassTemplate2">
			<Border
				BorderThickness="0,0,0,5"
				BorderBrush="{DynamicResource ShadowDetail}">
				<Grid
					Margin="0,-4,0,0">

					<Grid.ColumnDefinitions>
						<!-- 0 -->
						<ColumnDefinition
							Width="100" />
						<!-- 1 -->
						<ColumnDefinition
							Width="100" />
						<!-- 2 -->
						<ColumnDefinition
							Width="100" />
						<!-- 3 -->
						<ColumnDefinition
							Width="100" />
						<!-- 4 -->
						<ColumnDefinition
							Width="100" />
						<!-- 5 -->
						<ColumnDefinition
							Width="100" />
						<!-- 6 -->
						<ColumnDefinition
							Width="100" />
						<!-- 7 -->
						<ColumnDefinition
							Width="100" />
						<!-- 8 -->
						<ColumnDefinition
							Width="1*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="25" />
						<RowDefinition
							Height="24" />
					</Grid.RowDefinitions>

					<Border
						Grid.Row="0"
						Grid.Column="0"
						Grid.ColumnSpan="2"
						Style="{StaticResource lblHeaderBdrTop}">
						<TextBox
							Style="{DynamicResource CellTxBox}"
							Text="{Binding SheetData}"
							Grid.Column="0" />
					</Border>
					<Border
						Grid.Row="0"
						Grid.Column="2"
						Grid.ColumnSpan="2"
						Style="{StaticResource lblHeaderBdrTop}">
						<TextBox
							Style="{DynamicResource CellTxBox}"
							Text="{Binding SheetName}"
							Grid.Column="1" />
					</Border>
					<Border
						Grid.Row="0"
						Grid.Column="4"
						Grid.ColumnSpan="5"
						Style="{StaticResource lblHeaderBdrTop}">
						<TextBox
							Style="{DynamicResource CellTxBox}"
							Text="{Binding SheetNumber}" />
					</Border>

					<Rectangle
						Grid.Column="0"
						Grid.Row="1"
						Grid.ColumnSpan="1"
						Fill="{StaticResource BkGrndUnUsedDetail}" />

					<Border
						Grid.Row="1"
						Grid.Column="0"
						Style="{StaticResource lblHeaderBdrBottom}"
						BorderThickness="0,0,0,0">
					</Border>
					<Border
						Grid.Column="1"
						Grid.Row="1"
						Grid.ColumnSpan="2"
						Style="{StaticResource lblHeaderBdrBottom}"
						BorderThickness="1,0,0,0">
						<TextBlock
							Style="{DynamicResource CellTxBlk}"
							Text="{Binding SheetInfo}" />
					</Border>
					<Border
						Grid.Column="3"
						Grid.Row="1"
						Grid.ColumnSpan="2"
						Style="{StaticResource lblHeaderBdrBottom}"
						BorderThickness="1,0,1,0">
						<TextBlock
							Style="{DynamicResource CellTxBlk}"
							Text="{Binding SheetInfo2}" />
					</Border>

					<Rectangle
						Grid.Column="5"
						Grid.Row="1"
						Grid.ColumnSpan="4"
						Fill="{StaticResource BkGrndUnUsedDetail}" />

				</Grid>
			</Border>
		</DataTemplate>


	</Window.Resources>
	<Grid
		d:DataContext="{d:DesignData /SampleData/SampleCollectionSampleData.xaml}"
		Margin="0,0,-0.4,7">

		<ListBox
			x:Name="listBox"
			Margin="10,10,10,0"
			HorizontalAlignment="Stretch"
			HorizontalContentAlignment="Stretch"
			Background="LightGray"
			ItemTemplate="{StaticResource SampleDataClassTemplate}"
			DataContext="{Binding Source={x:Static sampleData:SampleCollection.sx}}"
			d:DataContext="{d:DesignData /SampleData/SampleCollectionSampleData.xaml}"
			ItemsSource="{Binding}"
			Height="226.982"
			VerticalAlignment="Top">
			<ListBox.Template>
				<ControlTemplate>
					<Border
						BorderBrush="Black"
						BorderThickness="1"
						Margin="0,0,0,0">
						<ScrollViewer
							VerticalScrollBarVisibility="Auto">
							<DockPanel
								Background="LightGray"
								LastChildFill="True">

								<Grid
									Background="Aqua"
									DockPanel.Dock="Top"
									Height="20">
									<Grid.ColumnDefinitions>
										<ColumnDefinition
											Width="200" />
										<ColumnDefinition
											Width="200" />
										<ColumnDefinition
											Width="1*" />
									</Grid.ColumnDefinitions>
									<Border
										Grid.Column="0"
										BorderBrush="Black"
										BorderThickness="0,0,1,1"
										Margin="0">
										<Label
											Padding="4,0,0,0"
											Content="First" />
									</Border>
									<Border
										Grid.Column="1"
										BorderBrush="Black"
										BorderThickness="0,0,1,1">
										<Label
											Padding="4,0,0,0"
											Grid.Column="1"
											Content="Second" />
									</Border>
									<Border
										Grid.Column="2"
										BorderBrush="Black"
										BorderThickness="0,0,0,1">
										<Label
											Padding="4,0,0,0"
											Grid.Column="2"
											Content="Third" />
									</Border>
								</Grid>

								<ItemsPresenter
									Margin="-6,-1,-5,0" />

							</DockPanel>
						</ScrollViewer>
					</Border>
				</ControlTemplate>
			</ListBox.Template>
		</ListBox>

		<ListView
			x:Name="listView"
			Margin="10,348,90.333,0"
			HorizontalAlignment="Stretch"
			HorizontalContentAlignment="Stretch"
			Background="LightGray"
			Height="198.982"
			VerticalAlignment="Top"
			BorderThickness="1"
			BorderBrush="black"
			Padding="-3,-1,0,0"
			DataContext="{Binding Source={x:Static sampleData:SampleCollection.sx}}"
			ItemsSource="{Binding}"
			d:DataContext="{d:DesignData /SampleData/SampleCollectionSampleData.xaml}">
			<ListView.Resources>
				<Style
					TargetType="{x:Type Label}">
					<Setter
						Property="BorderBrush"
						Value="Black" />

					<Setter
						Property="BorderThickness"
						Value="1,0,0,1" />
				</Style>

				<Style
					x:Key="header0"
					TargetType="{x:Type GridViewColumnHeader}">
					<Setter
						Property="Template">
						<Setter.Value>
							<ControlTemplate
								TargetType="{x:Type GridViewColumnHeader}">
								<Label
									Content="this 0" />
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>

				<Style
					x:Key="header1"
					TargetType="{x:Type GridViewColumnHeader}">
					<Setter
						Property="HorizontalAlignment"
						Value="Stretch" />
					<Setter
						Property="Template">
						<Setter.Value>
							<ControlTemplate
								TargetType="{x:Type GridViewColumnHeader}">
								<Label
									Content="this 1" />
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>

				<Style
					x:Key="header2"
					TargetType="{x:Type GridViewColumnHeader}">
					<Setter
						Property="HorizontalAlignment"
						Value="Stretch" />
					<Setter
						Property="Template">
						<Setter.Value>
							<ControlTemplate
								TargetType="{x:Type GridViewColumnHeader}">
								<Label
									Content="this 2" />
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>

			</ListView.Resources>

			<ListView.View>
				<GridView
					AllowsColumnReorder="False">
					<GridViewColumn
						Width="250">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock
									Text="{Binding SheetNumber}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
						<GridViewColumnHeader
							Style="{DynamicResource ResourceKey=header0}" />
					</GridViewColumn>

					<GridViewColumn
						Width="100">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock
									Text="{Binding SheetName}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
						<GridViewColumnHeader
							Style="{DynamicResource header1}" />
					</GridViewColumn>

					<GridViewColumn
						Width="300">

						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock
									Text="{Binding SheetData}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>

						<GridViewColumnHeader
							Style="{DynamicResource header2}" />
					</GridViewColumn>
				</GridView>
			</ListView.View>

		</ListView>


		<ListBox
			x:Name="listBox2"
			Margin="10,582,10,0"
			HorizontalAlignment="Stretch"
			HorizontalContentAlignment="Stretch"
			Background="LightGray"
			ItemTemplate="{StaticResource SampleDataClassTemplate2}"
			DataContext="{Binding Source={x:Static sampleData:SampleCollection.sx}}"
			d:DataContext="{d:DesignData /SampleData/SampleCollectionSampleData.xaml}"
			ItemsSource="{Binding}"
			Height="227"
			VerticalAlignment="Top">
			<ListBox.Template>
				<ControlTemplate>
					<Border
						BorderBrush="Black"
						BorderThickness="0"
						Margin="0,0,0,0">

						<DockPanel
							Background="LightGray"
							LastChildFill="True">


							<Border
								DockPanel.Dock="Top"
								VerticalAlignment="Top"
								Height="49"
								BorderThickness="0,0,0,8">
								<Border.BorderBrush>
									<LinearGradientBrush
										EndPoint="0.5,1"
										StartPoint="0.5,0">
										<GradientStop
											Color="Black"
											Offset="0.847" />
										<GradientStop
											Color="White"
											Offset="1" />
									</LinearGradientBrush>
								</Border.BorderBrush>
								<Grid
									Background="#444444"
									DockPanel.Dock="Top">
									<Grid.ColumnDefinitions>
										<!-- 0 -->
										<ColumnDefinition
											Width="100" />
										<!-- 1 -->
										<ColumnDefinition
											Width="100" />
										<!-- 2 -->
										<ColumnDefinition
											Width="100" />
										<!-- 3 -->
										<ColumnDefinition
											Width="100" />
										<!-- 4 -->
										<ColumnDefinition
											Width="100" />
										<!-- 5 -->
										<ColumnDefinition
											Width="100" />
										<!-- 6 -->
										<ColumnDefinition
											Width="100" />
										<!-- 7 -->
										<ColumnDefinition
											Width="100" />
										<!-- 8 -->
										<ColumnDefinition
											Width="1*" />
									</Grid.ColumnDefinitions>
									<Grid.RowDefinitions>
										<RowDefinition
											Height="21" />
										<RowDefinition
											Height="20" />
									</Grid.RowDefinitions>
									<Border
										Grid.Row="0"
										Grid.Column="0"
										Grid.ColumnSpan="2"
										Style="{StaticResource lblHeaderBdrTop}">
										<Label
											Style="{StaticResource lbHeader}"
											Content="First" />
									</Border>
									<Border
										Grid.Row="0"
										Grid.Column="2"
										Grid.ColumnSpan="2"
										Style="{StaticResource lblHeaderBdrTop}">
										<Label
											Style="{StaticResource lbHeader}"
											Content="Second" />
									</Border>
									<Border
										Grid.Row="0"
										Grid.Column="4"
										Grid.ColumnSpan="5"
										Style="{StaticResource lblHeaderBdrTop}">
										<Label
											Style="{StaticResource lbHeader}"
											Content="Third" />
									</Border>


									<Border
										Grid.Row="1"
										Grid.Column="0"
										BorderThickness="0,0,0,0">
										<Rectangle
											Fill="#282828" />
									</Border>
									<Border
										Grid.Row="1"
										Grid.Column="1"
										Grid.ColumnSpan="2"
										Style="{StaticResource lblHeaderBdrBottom}"
										BorderThickness="1,0,0,0">
										<Label
											Style="{StaticResource lbHeader}"
											Content="Fourth" />
									</Border>
									<Border
										Grid.Row="1"
										Grid.Column="3"
										Grid.ColumnSpan="2"
										Style="{StaticResource lblHeaderBdrBottom}"
										BorderThickness="1,0,0,0">
										<Label
											Style="{StaticResource lbHeader}"
											Content="Fifth" />
									</Border>
									<Border
										Grid.Column="5"
										Grid.Row="1"
										Grid.ColumnSpan="4"
										Style="{StaticResource lblHeaderBdrBottom}"
										BorderThickness="1,0,0,0">
										<Rectangle
											Fill="#282828" />

									</Border>
								</Grid>

							</Border>
							<ScrollViewer
								VerticalScrollBarVisibility="Auto">

								<ItemsPresenter
									Margin="-6,-1,-5,0" />
							</ScrollViewer>
						</DockPanel>

					</Border>
				</ControlTemplate>
			</ListBox.Template>
		</ListBox>
		<Button
			x:Name="btnDone"
			Content="Done"
			HorizontalAlignment="Left"
			Height="48"
			Margin="815,1019,0,0"
			VerticalAlignment="Top"
			Width="97"
			IsCancel="True"
			IsDefault="True"
			Click="BtnDone_Click" />
		<Button
			x:Name="button_Copy"
			Content="MultiLineWindow"
			HorizontalAlignment="Left"
			Height="48"
			Margin="699,1019,0,0"
			VerticalAlignment="Top"
			Width="111"
			Click="Button_Copy_Click" />
		<Button
			x:Name="button_Copy1"
			Content="Header andFooter"
			HorizontalAlignment="Left"
			Height="48"
			Margin="583,1019,0,0"
			VerticalAlignment="Top"
			Width="111"
			Click="Button_Copy1_Click" />
		<Button x:Name="button_Copy2"
						Content="Surface Points"
						HorizontalAlignment="Left"
						Height="48"
						Margin="467,1019,0,0"
						VerticalAlignment="Top"
						Width="111"
						Click="Button_Copy2_Click" />
		<Button x:Name="button_Copy3"
						Content="Control Points"
						HorizontalAlignment="Left"
						Height="48"
						Margin="351,1019,0,0"
						VerticalAlignment="Top"
						Width="111"
						Click="Button_Copy3_Click" />


	</Grid>
</Window>



